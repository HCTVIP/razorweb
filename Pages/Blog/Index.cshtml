@page
@model RAZORWEB.Pages.Blog.IndexModel

@{
    ViewData["Title"] = "Các bài viết";
    Layout = "~/Pages/Shared/_Layout.cshtml";
    int i = 0;
}


@{
    var pagingmodel = new XTL.Helpers.PagingModel()
            {
                currentpage = Model.currentPage,
                countpages = Model.countPages,
                generateUrl = (int? p) => Url.Page("/Blog/Index", new { p })
            };
}



<h1>Danh sách bài viết</h1>
<p>Số lượng bài viết: @Model.Article.Count</p>


<form class="mb-3" method="get" asp-page="./Index">
    <label>Tìm kiếm</label>
    <input name="SearchString" value=""/>
    <button type="submit">Tìm</button>
</form>


<p>
    <a asp-page="Create" class="btn btn-outline-primary">Tạo bài mới</a>
</p>


<table class="table">
    <thead>
        <tr>
            <th>STT</th>
            <th>
                @Html.DisplayNameFor(model => model.Article[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Article[0].Created)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Article) {
        <tr>
            <td>@(++i)</td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Chỉnh sửa</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Xem</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>

<partial name="_PagingXTL" model="@pagingmodel">
